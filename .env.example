# Indoor Monitor Hosts (comma-separated)
HOSTS=http://device1.local,http://device2.local

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your-influx-token-here
INFLUX_ORG=your-org
INFLUX_BUCKET=indoor-monitoring

# Polling Configuration
POLL_INTERVAL=60

# Logging
LOG_LEVEL=info

# Metrics (optional)
METRICS_ENABLED=true
METRICS_PORT=8081

# Tracing (optional)
TRACING_ENABLED=false
TRACING_SAMPLERATE=0.01
TRACING_SERVICE=indoor-monitor-sink
TRACING_VERSION=1.0.0

# Local Development (optional)
LOCAL=false
